@model EditApplicationGetModel
@{
    ViewData["Title"] = "Modifica Applicazione";
}
<div id="explorerLink">
    <a asp-controller="Application" asp-action="Index">Applicazioni</a>&nbsp;&nbsp;&gt;&nbsp;&nbsp;@Model.Application.Name
</div>
<h2>Modifica @Model.Application.Name</h2>
<br />
<div asp-if="Model.Error != 0">
    <label class="error_lbl" asp-if="Model.Error == 1">Errore durante la procedura di inserimento, controllare di aver inserito tutti i dati richiesti.</label>
    <label class="error_lbl" asp-if="Model.Error == 2">Codice applicazione non valido. Inserire un altro codice.</label>
    <label class="error_lbl" asp-if="Model.Error == 3">Nome applicazione già assegnato ad un'altro elemento.</label>
</div>
<form asp-antiforgery="true" asp-route-id="@Model.Application.Id" autocomplete="off" style="width:350px;">
    <label>Codice:</label>
    <input type="text" name="code" id="code" value="@Model.Application.Code" />
    <br />
    <label style="margin-top:15px;">Nome:</label>
    <input type="text" name="name" value="@Model.Application.Name" />
    <br />
    <label>Data Rilascio (@Model.InitialVersion.Version):</label>
    <input type="date" name="release" value="@Model.InitialVersion.ReleaseDate.ToString("yyyy-MM-dd")" />
    <br />
    <br />
    <br />
    <input type="submit" value="Modifica" />
</form>