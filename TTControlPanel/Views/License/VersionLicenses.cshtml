@model VersionLicensesModel
@{
    ViewData["Title"] = "Versioni Applicazione";
}
<div id="explorerLink">
    <a asp-controller="Application" asp-action="Index">Applicazioni</a>&nbsp;&nbsp;&gt;&nbsp;&nbsp;<a asp-controller="Application" asp-action="Versions" asp-route-id="@Model.ApplicationVersion.Application.Id">@Model.ApplicationVersion.Application.Name</a>&nbsp;&nbsp;&gt;&nbsp;&nbsp;@Model.ApplicationVersion.Version
</div>
<h2>@Model.ApplicationVersion.Application.Name @Model.ApplicationVersion.Version - Licenze</h2>
<br />
<div asp-if="Model.Error != 0">
    <label class="error_lbl" asp-if="Model.Error == 1">Errore, licenza inesistente.</label>
    <label class="error_lbl" asp-if="Model.Error == 2">Impossibile cancellare un licenza attiva.</label>
</div>
<table class="table">
    <tr style="font-weight:bold;">
        <td>ProductKey</td>
        <td>Tipo</td>
        <td>Data Rilascio</td>
        <td>Stato</td>
        <td>Data Attivazione</td>
        <td>Permesso</td>
        <td>Attività</td>
        <td>Azioni</td>
    </tr>
    @foreach (var l in Model.Licenses)
    {
        var pk = new TTLL.Models.ProductKey(l.ProductKey.Key);
        bool exp = false;
        if (l.Active)
        {
            var sum = ((DateTime)l.ActivateDateTimeUtc).ToDateTimeCE().AddHours(pk.HoursDuration);
            exp = (pk.HoursDuration == 0) ? false : ((DateTimeCE.Now > sum) ? true : false);
        }
        var llo = Model.LastLogs.Where(ll => ll.License.Id == l.Id).FirstOrDefault();
        var resll = 0;
        var title = "Nessuna attività recente";
        if (llo != null)
        {
            var dt = ((DateTime)(llo.DateTimeUtc)).ToDateTimeCE();
            resll = dt < DateTimeCE.Now.AddMinutes(-60) ? 1 : dt < DateTimeCE.Now.AddMinutes(-30) ? 2 : 3;
            title = (resll == 1) ? "Nessuna attività registrata da un'ora." : (resll == 2) ? "Una attività recente registrata entro mezz'ora" : "Attualmente attivo";
        }
        <tr class="@(l.Banned ? "ban" : "")">
            <td style="text-align:center; font-size: 12px;"><a asp-controller="License" asp-action="Details" asp-route-id="@l.Id">@l.ProductKey.Key</a></td>
            <td style="text-align:center; font-size: 13px;">@l.ProductKey.Type.ToString()</td>
            <td style="text-align:center; font-size: 11px;">@l.ReleaseDate.ToString("dd/MM/yy HH:mm")</td>
            <td style="font-size: 13px;" class="license@((!l.Active) ? "I" : (exp ? "S" : "A"))">@((!l.Active) ? "Pronta" : (exp ? "Scaduta" : "Attiva"))</td>
            <td style="text-align:center; font-size: 11px;">@(l.ActivateDateTimeUtc == null ? "-" : ((DateTime)l.ActivateDateTimeUtc).ToDateTimeCE().ToString("dd/MM/yy HH:mm"))</td>
            <td style="font-size: 13px;" class="license@(l.Banned ? "B" : "A")">@(l.Banned ? "Bloccato" : "Consetito")</td>
            <td style="text-align: center;"><span title="@title" style="vertical-align: middle;" class="led @(resll == 0 ? "black" : resll == 1 ? "red" : resll == 2 ? "orange" : "green")"></span></td>
            <td>
                <span asp-if="@(!l.Banned)"><a asp-controller="License" asp-action="Ban" asp-route-id="@l.Id" asp-route-mod="1">Blocca</a></span>
                <span asp-if="@(l.Banned)"><a asp-controller="License" asp-action="Restore" asp-route-id="@l.Id" asp-route-mod="1">Sblocca</a></span>
                <span asp-if="@(!l.Banned && !l.Active)"><a asp-controller="License" asp-action="Delete" asp-route-id="@l.Id" asp-route-mod="1">Rimuovi</a></span>
            </td>
        </tr>
    }
    <tr asp-if="Model.Licenses.Count == 0">
        <td colspan="5" style="text-align:center">Nessuna licenza presente</td>
    </tr>
</table>
<br />
<div>
    <a asp-action="PrecompiledNew" asp-controller="License" asp-route-id="@Model.ApplicationVersion.Id"><input type="button" value="Nuova" /></a>
</div>